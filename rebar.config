{erl_opts, [
    debug_info,
    warnings_as_errors,
    {platform_define, "^R[1-9]", no_otp_namespaced_types}
]}.
{deps, [
    {otp_compat, ".*", {git, "git://github.com/tburghart/otp_compat.git", {branch, "master"}}},
    {protobuffs, ".*", {git, "git://github.com/basho/erlang_protobuffs.git", {branch, "feature/otp-17"}}}
]}.
{xref_checks, [
    deprecated_function_calls,
    deprecated_functions,
    locals_not_used,
    undefined_function_calls,
    undefined_functions
]}.
{eunit_opts, [verbose]}.
{plugins, [riak_pb_msgcodegen]}.
{plugin_dir, "plugins"}.
%% Fixes attempted removal of riak_pb directory by rebar_escripter
{escript_name, "doesnothavescript"}.
{edoc_opts, [{preprocess, true}]}.
